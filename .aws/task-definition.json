{
    "containerDefinitions": [
      {
        "name": "web-container",
        "image": "web-ecr",
        "essential": true,
        "portMappings": [
          {
            "hostPort": 8080,
            "containerPort": 8080
          }
        ],
        "environment": [{
             "name" : "DB_HOST",
             "value" : "${{ secrets.rds_address }}"
             },
             {
             "name" : "DB_DATABASE",
             "value" : "${{ secrets.rds_db }}"
             },
             {
             "name" : "DB_USERNAME",
             "value" : "${{ secrets.rds_user }}"
             },
             {
             "name" : "DB_PASSWORD",
             "value" : "${{ secrets.rds_pwd }}"
             }],
        "cpu": "256",
        "memory": "512",
        "networkMode": "awsvpc"
      }
    ],
    "cpu": "256",
    "memory": "512",
    "family": "web-task",
    "requiresCompatibilities": [
      "FARGATE"
    ],
    "networkMode": "awsvpc"
  }